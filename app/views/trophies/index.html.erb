<table class="trophies-table">
  <thead>
    <tr>
      <td>Brewer</td>
      <td>Style</td>
      <td>Score</td>
      <td>Date</td>
      <td>Place</td>
      <td>Links</td>
    </tr>
  </thead>
  <tbody>
    <% @trophies.each do |trophy| %>
      <tr>
        <td><%= trophy.user.full_name %></td>
        <td>
          <% if trophy.subcategory&.bjcp_id %>
            <span class="Label Label--orange">
              <%= trophy.subcategory&.bjcp_id %>
            </span>
          <% end %>
        </td>
        <td>
          <span class="Counter"><%= trophy.bjcp_score %></span>
        </td>
        <td>
          <%= l trophy.competition_date, format: :short %>
        </td>
        <td><%= trophy.place_description %></td>
        <td>
          <%= link_to trophy.competition_url do %>
            <%= octicon "law", height: 24,  class: "right left" %>
          <% end %>

          <% if trophy.recipe_url.present? %>
            <%= link_to trophy.recipe_url do %>
              <%= octicon "file", height: 24,  class: "right left" %>
            <% end %>
          <% end %>

          <% if trophy.photo.attached? %>
            <%= link_to url_for(trophy.photo) do %>
              <%= octicon "file-media", height: 24,  class: "right left" %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
