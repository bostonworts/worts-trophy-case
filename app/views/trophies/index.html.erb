
<h1>Trophies</h1>

<%= link_to "Add Trophy", new_trophy_path %>

<table>
  <thead>
    <tr class="clearfix">
      <td>Brewer</td>
      <td>BJCP Score</td>
      <td>Competition Date</td>
      <td>Competition URL</td>
    </tr>
  </thead>
  <tbody>
    <% @trophies.each do |trophy| %>
      <tr class="clearfix">
        <td class="col-3"><%= trophy.user.full_name %></td>
        <td class="col-3"><%= trophy.bjcp_score %></td>
        <td class="col-3"><%= trophy.competition_date %></td>
        <td class="col-3"><%= trophy.competition_url %></td>
      </tr>
    <% end %>
  </tbody>
</table>
