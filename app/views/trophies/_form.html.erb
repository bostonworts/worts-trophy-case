<%= form_for trophy, builder: FormGroupBuilder do |f| %>
  <%= f.form_group :subcategory_id do %>
    <dt><%= f.label(:subcategory_id) %></dt>
    <dd>
      <%= f.collection_select :subcategory_id, Subcategory.all, :id, :description, {}, { class: "form-select" } %>
    </dd>
  <% end %>

  <%= f.form_group :bjcp_score do %>
    <dt><%= f.label(:bjcp_score) %></dt>
    <dd>
      <%= f.collection_select :bjcp_score, 1..50, :itself, :itself, {}, { class: "form-select" } %>
    </dd>
  <% end %>

  <%= f.form_group :competition_date do %>
    <dt><%= f.label(:competition_date) %></dt>
    <dd>
      <%= f.date_select :competition_date, { end_year: Date.today.year }, { class: "form-select" } %>
    </dd>
  <% end %>

  <%= f.form_group :competition_url do %>
    <dt><%= f.label(:competition_url) %></dt>
    <dd>
      <%= f.text_field :competition_url, class: "form-control" %>
    </dd>
  <% end %>

  <%= f.form_group :place do %>
    <dt><%= f.label(:place) %></dt>
    <dd>
      <%= f.collection_select :place, 1..4, :itself, :ordinalize, { include_blank: "Didn't place" }, { class: "form-select" } %>
      in
      <%= f.collection_select :place_context, Trophy::PLACE_CONTEXTS, :itself, :titleize, { include_blank: "Didn't place" }, { class: "form-select" } %>
    </dd>
  <% end %>

  <%= f.form_group :recipe_url do %>
    <dt><%= f.label(:recipe_url) %></dt>
    <dd>
      <%= f.text_field :recipe_url, class: "form-control" %>
    </dd>
  <% end %>

  <%= f.form_group :photo do %>
    <dt><%= f.label(:photo) %></dt>
    <dd>
      <%= f.file_field :photo, direct_upload: true %>
    </dd>
  <% end %>

  <%= f.submit class: "btn btn-primary" %>
<% end %>
