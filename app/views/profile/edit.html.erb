<div class="Subhead">
  <div class="Subhead-heading">My Profile</div>
</div>

<%= form_for @user, url: my_profile_path, builder: FormGroupBuilder do |f| %>
  <%= f.form_group :full_name do %>
    <dt><%= f.label(:full_name) %></dt>
    <dd>
      <%= f.text_field :full_name, class: "form-control" %>
    </dd>
  <% end %>

  <%= f.submit "Update Profile", class: "btn btn-primary" %>
<% end %>
